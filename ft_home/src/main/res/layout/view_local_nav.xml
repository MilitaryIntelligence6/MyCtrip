<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_img_attractions"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@mipmap/lbsguide" />

        <TextView
            android:id="@+id/nav_txt_attractions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:text="景点攻略" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_img_tickets"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            tools:src="@mipmap/lbsguide" />

        <TextView
            android:id="@+id/nav_txt_tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            tools:text="景点攻略" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_img_food"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            tools:src="@mipmap/lbsguide" />

        <TextView
            android:id="@+id/nav_txt_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            tools:text="景点攻略" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_img_around"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            tools:src="@mipmap/lbsguide" />

        <TextView
            android:id="@+id/nav_txt_around"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            tools:text="景点攻略" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_img_day"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            tools:src="@mipmap/lbsguide" />

        <TextView
            android:id="@+id/nav_txt_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            tools:text="景点攻略" />
    </LinearLayout>

</LinearLayout>
